{
  "name": "http-server-ui",
  "version": "0.0.1",
  "description": "http-server-ui",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:mac": "electron-builder --mac --x64",
    "build:windows": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64"
  },
  "author": "nojaja",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "http-server": "^0.12.1"
  },
  "build": {
    "productName": "http-server-ui",
    "appId": "local.test.app1",
    "copyright": "Copyright Â© 2018 ${author}",
    "mac": {
      "category": "http-server",
      "target": "dmg"
    },
    "dmg": {
        "contents": [
            {
                "x": 130,
                "y": 220
            },
            {
                "x": 410,
                "y": 220,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "win":{
      "target": {
        "target": "zip",
        "arch": ["x64"]
      }
    },
    "linux": {
        "category": "http-server"
    }
  }
}
