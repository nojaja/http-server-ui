{
  "name": "http-server-ui",
  "version": "0.0.1",
  "description": "http-server-ui",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:mac": "electron-builder --mac --x64 --publish never",
    "build:windows": "electron-builder --win --x64 --publish never",
    "build:linux": "electron-builder --linux --x64 --publish never"
  },
  "author": "nojaja",
  "license": "MIT",
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^22.6.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "http-server": "^0.12.3",
    "opener": "^1.5.1",
    "optimist": "^0.6.1",
    "portfinder": "^1.0.26"
  },
  "build": {
    "productName": "http-server-ui",
    "appId": "local.test.app1",
    "copyright": "Copyright Â© 2018 ${author}",
    "mac": {
      "category": "http-server",
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": {
        "target": "zip",
        "arch": [
          "x64"
        ]
      }
    },
    "linux": {
      "category": "http-server"
    }
  }
}
